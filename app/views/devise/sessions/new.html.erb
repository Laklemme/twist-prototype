<div class="wrapper-form flex-form">
  <h2 class="h2-form">Log in</h2>
  <div class="">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs flex-column-all">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in", class: "black-button", style: "width: 75vw" %>
        <br>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
