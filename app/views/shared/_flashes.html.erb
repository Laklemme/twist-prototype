<% if notice %>
  <div class="flash flash-success alert alert-dismissible fade show" role="alert">
    <p><%= notice %></p>
    <button type="button" class="close flash-margin" data-dismiss="alert" aria-label="Close" style="font-size: 30px;">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<% if alert %>
  <div class="flash flash-warning alert alert-dismissible fade show" role="alert">
    <p><%= alert %></p>
    <button type="button" class="close flash-margin" data-dismiss="alert" aria-label="Close" style="font-size: 30px;">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
