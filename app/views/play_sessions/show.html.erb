<div class="morph-div flex-column-all timer-margin">
  <div class="" data-controller="display-timer">
    <div class="circular">
      <div class="inner"></div>
      <div class="number" data-insert-in-list-target="timer-number">
        <div class="wrapper-play">
          <div class="wrapper-timer" data-display-timer-target="timer"></div>
          <button data-action="click->display-timer#pause" class="decoration-button"><i class="fas fa-pause" data-display-timer-target="symbol"></i></button>
        </div>
      </div>
      <div class="circle">
        <div class="bar left">
            <div class="progress" data-display-timer-target="left"></div>
        </div>
        <div class="bar right">
            <div class="progress" data-display-timer-target="right"></div>
        </div>
      </div>
    </div>
    <%= image_tag @play_session.game.img[6..@play_session.game.img.length], class: 'card-img-big img-margin-top' %>
  </div>
</div>
