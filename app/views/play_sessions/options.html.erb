<div class="morph-div-no-padding flex-column-all timer-margin">
  <div class="center-timer">
    <div class="circular">
      <div class="inner"></div>
      <div class="number">
        <div class="wrapper-play">
          <div class="wrapper-timer">0</div>
        </div>
      </div>
      <div class="circle">
        <div class="bar left">
            <div class="progress finished"></div>
        </div>
        <div class="bar right">
            <div class="progress finished"></div>
        </div>
      </div>
    </div>
    <i class="fas fa-thumbs-up big-icon green-f"></i>
    <div class="button-group flex-column-all">
      <%= link_to 'REPLAY', game_path(@play_session.game_id), class: 'black-button' %>
      <%= link_to 'OTHER GAME', games_path, class: 'black-button' %>
      <%= link_to 'FINISH', play_session_reward_path, class: 'black-button' %>
    </div>
  </div>
</div>
